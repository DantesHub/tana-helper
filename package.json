{
  "name": "tana-helper",
  "version": "1.0.0",
  "description": "Localhost http service for Tana commands to call",
  "main": "src/main.ts",
  "bin": "dist/main.js",
  "type": "module",
  "scripts": {
    "start": "tsc && nodemon ./dist/main.js",
    "build": "rimraf dist && esbuild src/main.ts --bundle --platform=node --outfile=dist/main.js && cp src/scripts/* dist",
    "ts.check": "tsc --project tsconfig.json",
    "add-build": "git add dist",
    "test": "echo \"Error: no test specified\" && exit 1",
    "package": "yarn build && npx caxa --input ./dist --output \"TanaHelper.app\" -- \"{{caxa}}/node_modules/.bin/node\" \"{{caxa}}/main.js\" && cp TanaHelper TanaHelper.app/Contents/Resources && cp env.template TanaHelper.app/Contents/Resources/application/.env"
  },
  "pre-commit": [
    "ts.check",
    "build",
    "add-build"
  ],
  "dependencies": {
    "@pinecone-database/pinecone": "^0.0.12",
    "axios": "^1.3.5",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-jwt": "^8.4.1",
    "express-winston": "^4.2.0",
    "helmet": "^6.1.3",
    "jwks-rsa": "^3.0.1",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/cors": "^2.8.13",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.17",
    "@types/express-jwt": "^7.4.2",
    "@types/helmet": "^4.0.0",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.15.11",
    "caxa": "^3.0.1",
    "esbuild": "^0.17.18",
    "nodemon": "^2.0.22",
    "pre-commit": "^1.2.2",
    "rimraf": "^5.0.0",
    "typescript": "^5.0.4"
  },
  "author": "Brett Adam <verveguy>",
  "license": "MIT"
}
